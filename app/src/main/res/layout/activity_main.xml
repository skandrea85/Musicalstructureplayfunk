<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.andrea.musicalstructureplayfunk.MainActivity">

    <TextView
        android:id="@+id/rock"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/button"
        android:drawablePadding="@dimen/drawpadding"
        android:drawableRight="@drawable/play"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/paddingleft"
        android:paddingRight="@dimen/paddingright"
        android:text="@string/Guns"
        android:textColor="#FF9800"
        android:textSize="@dimen/text" />

    <TextView
        android:id="@+id/folk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/button"
        android:drawablePadding="@dimen/drawpadding"
        android:drawableRight="@drawable/play"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/paddingleft"
        android:paddingRight="@dimen/paddingright"
        android:text="@string/Johnny"
        android:textColor="#FF9800"
        android:textSize="@dimen/text" />

    <TextView
        android:id="@+id/funk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/button"
        android:drawablePadding="@dimen/drawpadding"
        android:drawableRight="@drawable/play"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/paddingleft"
        android:paddingRight="@dimen/paddingright"
        android:text="@string/james"
        android:textColor="#FF9800"
        android:textSize="@dimen/text" />

    <TextView
        android:id="@+id/reggae"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/button"
        android:drawablePadding="@dimen/drawpadding"
        android:drawableRight="@drawable/play"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/paddingleft"
        android:paddingRight="@dimen/paddingright"
        android:text="@string/bob"
        android:textColor="#FF9800"
        android:textSize="@dimen/text" />
</LinearLayout>
